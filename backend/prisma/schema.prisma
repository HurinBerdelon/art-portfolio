model Art {
  id             String   @id @default(uuid())
  uniqueCode     String   @unique
  title          String
  category       String
  image          String
  description    String?
  dimension      String
  productionDate DateTime
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
